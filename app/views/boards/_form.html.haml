.container#board
  %h2
    - if board.id.present?
      ボードNo. #{board.id}
    - else
      New Board

  = form_with(model: board, url: boards_path, method: 'post', local: true, data: { turbo: false } ) do |f|
    -# .field
    -#   %div
    -#     = f.label :avatar, 'アバター',class: 'label'
    -#   %div
    -#     = f.file_field :avatar
    .field
      = f.label :title, class: 'label'
      = f.text_field :title, class: 'text_field'
    .field
      = f.label :description, class: 'label'
      = f.text_area :description, class: 'text_area'
    .actions
      = f.submit "Submit" ,class: 'submit_btn'