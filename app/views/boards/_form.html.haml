.container#board
  %h2 New Board
  = form_with(model: board, url: boards_path, method: 'post', local: true, data: { turbo: false } ) do |f|
    .field
      = f.label :title, class: 'label'
      = f.text_field :title, class: 'field'
    .field
      = f.label :description, class: 'label'
      = f.text_area :description, class: 'area'
    .actions
      = f.submit "Submit" ,class: 'submit_btn'