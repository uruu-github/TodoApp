.container
  %h2 タスクNo.#{@task.id}
  .label Eyecatch
  .task_eyecatch
  - if @task.eyecatch.present?
    =image_tag @task.eyecatch, class: 'eyecatch'
  .field
    .label Title
    .text_field= @task.title
  .field
    .label Description
    .text_area= @task.description
  .field
    .label Delivery
    .text= @task.delivery
  
  .div
    %h2 コメント一覧
    - @comments.each do |comment|
      .comments
        %p= comment.description
    = link_to new_board_task_comment_path(@board, @task) do
      .submit_btn
        コメントを追加
  
  = link_to 'タスク一覧へ戻る', board_path(@board), class: 'label'

